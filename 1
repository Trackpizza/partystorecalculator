    <script>
    // Wait for DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function() {
        // Safely get element
        function $(selector) {
            return document.querySelector(selector);
        }
        
        function $$(selector) {
            return document.querySelectorAll(selector);
        }
        
        // Store the current state
        var state = {
            selectedBundle: null,
            items: {},
            scratchItems: {},
            buildType: 'bundles', // 'bundles' or 'scratch'
            subtotal: 0,
            tax: 0,
            total: 0
        };
        
        // Function to switch between tabs
        function showTab(tabName) {
            // Update the buildType in state
            state.buildType = tabName;
            
            // Reset selections when switching tabs
            if (tabName === 'bundles') {
                // We don't reset the bundle selection or additional items when switching back to bundles
                $$('#partyCalculator .scratch-item .item-count').forEach(function(count) {
                    count.textContent = '0';
                });
                state.scratchItems = {};
            } else if (tabName === 'scratch') {
                // Reset bundle selection when switching to scratch
                $$('#partyCalculator .bundle').forEach(function(bundle) {
                    bundle.classList.remove('selected');
                });
                state.selectedBundle = null;
            }
            
            // Hide all tab contents
            $$('#partyCalculator .tab-content').forEach(function(content) {
                content.classList.remove('active');
            });
            
            // Show the selected tab content
            $('#' + tabName + '-section').classList.add('active');
            
            // Update tab button styles
            $$('#partyCalculator .tab-btn').forEach(function(btn) {
                btn.classList.remove('active');
            });
            $('#' + tabName + '-tab').classList.add('active');
            
            // Update cart display
            updateCart();
        }
        
        // Function to select a bundle
        function selectBundle(bundleElement) {
            // First, remove selected class from all bundles
            $$('#partyCalculator .bundle').forEach(function(bundle) {
                bundle.classList.remove('selected');
            });
            
            // Add selected class to this bundle
            bundleElement.classList.add('selected');
            
            // Update state
            state.selectedBundle = {
                id: bundleElement.getAttribute('data-id'),
                name: bundleElement.querySelector('span:first-child').textContent,
                price: parseFloat(bundleElement.getAttribute('data-price')),
                contents: bundleElement.querySelector('.bundle-contents').textContent
            };
            
            // Update cart display
            updateCart();
        }
        
        // Function to increment item count
        function incrementItem(itemElement) {
            var countElement = itemElement.querySelector('.item-count');
            var count = parseInt(countElement.textContent);
            count++;
            countElement.textContent = count;
            
            // Update state
            var itemId = itemElement.getAttribute('data-id');
            if (!state.items[itemId]) {
                state.items[itemId] = {
                    id: itemId,
                    name: itemElement.querySelector('span:first-child').textContent,
                    price: parseFloat(itemElement.getAttribute('data-price')),
                    count: 0
                };
            }
            state.items[itemId].count = count;
            
            // Update cart display
            updateCart();
        }
        
        // Function to decrement item count
        function decrementItem(itemElement) {
            var countElement = itemElement.querySelector('.item-count');
            var count = parseInt(countElement.textContent);
            if (count > 0) {
                count--;
                countElement.textContent = count;
                
                // Update state
                var itemId = itemElement.getAttribute('data-id');
                state.items[itemId].count = count;
                
                // If count is 0, remove from state
                if (count === 0) {
                    delete state.items[itemId];
                }
                
                // Update cart display
                updateCart();
            }
        }
        
        // Function to increment scratch item count
        function incrementScratchItem(itemElement) {
            var countElement = itemElement.querySelector('.item-count');
            var count = parseInt(countElement.textContent);
            count++;
            countElement.textContent = count;
            
            // Update state
            var itemId = itemElement.getAttribute('data-id');
            if (!state.scratchItems[itemId]) {
                state.scratchItems[itemId] = {
                    id: itemId,
                    name: itemElement.querySelector('span:first-child').textContent,
                    price: parseFloat(itemElement.getAttribute('data-price')),
                    count: 0
                };
            }
            state.scratchItems[itemId].count = count;
            
            // Update cart display
            updateCart();
        }
        
        // Function to decrement scratch item count
        function decrementScratchItem(itemElement) {
            var countElement = itemElement.querySelector('.item-count');
            var count = parseInt(countElement.textContent);
            if (count > 0) {
                count--;
                countElement.textContent = count;
                
                // Update state
                var itemId = itemElement.getAttribute('data-id');
                state.scratchItems[itemId].count = count;
                
                // If count is 0, remove from state
                if (count === 0) {
                    delete state.scratchItems[itemId];
                }
                
                // Update cart display
                updateCart();
            }
        }
        
        // Function to update cart display and calculations
        function updateCart() {
            var cartElement = $('#cartItems');
            var cartHTML = '';
            
            // Reset calculations
            state.subtotal = 0;
            
            if (state.buildType === 'bundles') {
                // Add selected bundle to cart
                if (state.selectedBundle) {
                    cartHTML += '<div class="cart-item">' +
                        '<div>' +
                        '<strong>' + state.selectedBundle.name + '</strong>' +
                        '<div class="bundle-contents">' + state.selectedBundle.contents + '</div>' +
                        '</div>' +
                        '<div>$' + state.selectedBundle.price.toFixed(2) + '</div>' +
                        '</div>';
                    state.subtotal += state.selectedBundle.price;
                }
                
                // Add individual items to cart
                for (var itemId in state.items) {
                    var item = state.items[itemId];
                    if (item.count > 0) {
                        var itemTotal = item.price * item.count;
                        cartHTML += '<div class="cart-item">' +
                            '<div>' + item.name + ' x ' + item.count + '</div>' +
                            '<div>$' + itemTotal.toFixed(2) + '</div>' +
                            '</div>';
                        state.subtotal += itemTotal;
                    }
                }
                
                // If cart is empty, show message
                if (!state.selectedBundle && Object.keys(state.items).length === 0) {
                    cartHTML = '<div class="cart-message">No items selected yet. Start by choosing a bundle!</div>';
                }
            } else if (state.buildType === 'scratch') {
                // Add scratch items to cart
                var hasScratchItems = false;
                
                // Group items by category
                var categories = {
                    'Tents': [],
                    'Furniture': [],
                    'Entertainment': []
                };
                
                // Organize items by category based on ID prefix
                for (var itemId in state.scratchItems) {
                    var item = state.scratchItems[itemId];
                    if (item.count > 0) {
                        var itemTotal = item.price * item.count;
                        state.subtotal += itemTotal;
                        hasScratchItems = true;
                        
                        if (itemId.includes('tent')) {
                            categories['Tents'].push({
                                name: item.name,
                                count: item.count,
                                total: itemTotal
                            });
                        } else if (itemId.includes('table') || itemId.includes('chair')) {
                            categories['Furniture'].push({
                                name: item.name,
                                count: item.count,
                                total: itemTotal
                            });
                        } else if (itemId.includes('jumper') || itemId.includes('slide')) {
                            categories['Entertainment'].push({
                                name: item.name,
                                count: item.count,
                                total: itemTotal
                            });
                        }
                    }
                }
                
                // Add individual items from the "Add Individual Items" section as well
                for (var itemId in state.items) {
                    var item = state.items[itemId];
                    if (item.count > 0) {
                        var itemTotal = item.price * item.count;
                        cartHTML += '<div class="cart-item">' +
                            '<div>' + item.name + ' x ' + item.count + '</div>' +
                            '<div>$' + itemTotal.toFixed(2) + '</div>' +
                            '</div>';
                        state.subtotal += itemTotal;
                        hasScratchItems = true;
                    }
                }
                
                // Display items by category
                for (var category in categories) {
                    if (categories[category].length > 0) {
                        cartHTML += '<div class="cart-category"><strong>' + category + '</strong></div>';
                        categories[category].forEach(function(item) {
                            cartHTML += '<div class="cart-item">' +
                                '<div>' + item.name + ' x ' + item.count + '</div>' +
                                '<div>$' + item.total.toFixed(2) + '</div>' +
                                '</div>';
                        });
                    }
                }
                
                // If no scratch items selected, show message
                if (!hasScratchItems) {
                    cartHTML = '<div class="cart-message">No items selected yet. Choose items to build your package!</div>';
                }
            }
            
            // Update cart HTML
            cartElement.innerHTML = cartHTML;
            
            // Calculate tax and total
            state.tax = state.subtotal * 0.07;
            state.total = state.subtotal + state.tax;
            
            // Update displayed totals
            $('#subtotal').textContent = '$' + state.subtotal.toFixed(2);
            $('#tax').textContent = '$' + state.tax.toFixed(2);
            $('#total').textContent = '$' + state.total.toFixed(2);
        }
        
        // Function to simulate checkout
        function checkout() {
            if (state.buildType === 'bundles' && !state.selectedBundle) {
                alert('Please select a bundle before checking out.');
                return;
            }
            
            if (state.buildType === 'scratch' && Object.keys(state.scratchItems).length === 0 && Object.keys(state.items).length === 0) {
                alert('Please select at least one item before checking out.');
                return;
            }
            
            alert('Thank you for your reservation! Your total is $' + state.total.toFixed(2) + '. A confirmation email will be sent shortly.');
            
            // In a real application, you would send this data to a server
            console.log('Checkout data:', state);
            
            // Reset the form
            resetForm();
        }
        
        // Function to reset the form
        function resetForm() {
            // Reset bundle selection
            $$('#partyCalculator .bundle').forEach(function(bundle) {
                bundle.classList.remove('selected');
            });
            
            // Reset item counts for both regular items and scratch items
            $$('#partyCalculator .item-count').forEach(function(countElement) {
                countElement.textContent = '0';
            });
            
            // Reset to bundles tab
            showTab('bundles');
            
            // Reset state
            state = {
                selectedBundle: null,
                items: {},
                scratchItems: {},
                buildType: 'bundles',
                subtotal: 0,
                tax: 0,
                total: 0
            };
            
            // Update cart display
            updateCart();
        }
        
        // Set up event listeners
        
        // Tab buttons
        $('#bundles-tab').addEventListener('click', function() {
            showTab('bundles');
        });
        
        $('#scratch-tab').addEventListener('click', function() {
            showTab('scratch');
        });
        
        // Bundle selection
        $$('#partyCalculator .bundle').forEach(function(bundle) {
            bundle.addEventListener('click', function() {
                selectBundle(this);
            });
        });
        
        // Item counter buttons
        $$('#partyCalculator .item .plus-btn').forEach(function(button) {
            button.addEventListener('click', function() {
                incrementItem(this.closest('.item'));
            });
        });
        
        $$('#partyCalculator .item .minus-btn').forEach(function(button) {
            button.addEventListener('click', function() {
                decrementItem(this.closest('.item'));
            });
        });
        
        // Scratch item counter buttons
        $$('#partyCalculator .scratch-item .plus-btn').forEach(function(button) {
            button.addEventListener('click', function() {
                incrementScratchItem(this.closest('.scratch-item'));
            });
        });
        
        $$('#partyCalculator .scratch-item .minus-btn').forEach(function(button) {
            button.addEventListener('click', function() {
                decrementScratchItem(this.closest('.scratch-item'));
            });
        });
        
        // Checkout button
        $('.checkout-btn').addEventListener('click', checkout);
        
        // Initialize the cart
        updateCart();
        
        // Let user know calculator is ready
        console.log('Party Supply Calculator initialized successfully!');
    });
    </script>
</body>
</html>
